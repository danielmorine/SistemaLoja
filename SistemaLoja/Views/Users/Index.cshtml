@model  IEnumerable<SistemaLoja.ViewModels.UserView>
@{
    ViewBag.Title = "Index";
}

<h2>Configurações de permissões</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
      
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Permissões", "Role", new { id = item.UserId }) |
            </td>
        </tr>
    }

</table>
